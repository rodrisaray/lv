<!-- Scripts -->
<script>
  // Dark/Light Mode Persistence
  const toggleBtn=document.getElementById('theme-toggle');
  const body=document.body;
  const savedTheme=localStorage.getItem('theme')||'light';
  body.setAttribute('data-theme',savedTheme);
  toggleBtn.textContent=savedTheme==='light'?'Dark Mode':'Light Mode';
  toggleBtn.addEventListener('click',()=>{
    const newTheme=body.getAttribute('data-theme')==='light'?'dark':'light';
    body.setAttribute('data-theme',newTheme);
    localStorage.setItem('theme',newTheme);
    toggleBtn.textContent=newTheme==='light'?'Dark Mode':'Light Mode';
  });

  // Fade-up animations
  const faders=document.querySelectorAll('.fade-up');
  const observer=new IntersectionObserver((entries,observer)=>{
    entries.forEach(entry=>{
      if(entry.isIntersecting){entry.target.classList.add('show');observer.unobserve(entry.target);}
    });
  },{threshold:0.2});
  faders.forEach(fader=>observer.observe(fader));

  // Progressive Quantum Quiz
  const quizData=[
    {question:"A qubit can be 0, 1, or both at the same time.",answer:"True",difficulty:"Easy"},
    {question:"Entanglement links two qubits so one affects the other.",answer:"True",difficulty:"Easy"},
    {question:"Quantum gates are identical to classical logic gates.",answer:"False",difficulty:"Medium"},
    {question:"Superposition allows multiple states simultaneously.",answer:"True",difficulty:"Medium"},
    {question:"Measuring a qubit does not affect its state.",answer:"False",difficulty:"Hard"},
    {question:"Quantum teleportation transmits matter instantly.",answer:"False",difficulty:"Hard"},
    {question:"The Hadamard gate creates superposition.",answer:"True",difficulty:"Hard"}
  ];
  const quizContainer=document.getElementById('quiz-cards');
  const progressBar=document.getElementById('progress-bar');
  const scoreEl=document.getElementById('score');
  const totalEl=document.getElementById('total');
  let score=0,answered=0;
  const sortedQuiz=quizData.sort((a,b)=>{const order={Easy:1,Medium:2,Hard:3};return order[a.difficulty]-order[b.difficulty];});
  totalEl.textContent=sortedQuiz.length;

  sortedQuiz.forEach((q,index)=>{
    const card=document.createElement('div');
    card.className='bg-white p-6 rounded shadow transition-transform duration-300 hover:scale-105 fade-up';
    card.style.transitionDelay=`${0.1*index}s`;
    card.innerHTML=`
      <h3 class="font-bold text-xl mb-2">Question ${index+1} (${q.difficulty})</h3>
      <p>${q.question}</p>
      <div class="mt-2 space-x-2">
        <button class="quiz-btn bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">True</button>
        <button class="quiz-btn bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">False</button>
      </div>
    `;
    quizContainer.appendChild(card);

    const buttons=card.querySelectorAll('.quiz-btn');
    buttons.forEach(btn=>{
      btn.addEventListener('click',()=>{
        const correct=btn.textContent===q.answer;
        card.classList.add(correct?'bg-green-200':'bg-red-200','scale-105');
        setTimeout(()=>card.classList.remove('bg-green-200','bg-red-200','scale-105'),800);
        const oldScore=score;
        if(correct) score++;
        let current=oldScore;
        const animate=setInterval(()=>{
          if(current<score){current++;scoreEl.textContent=current;} else{clearInterval(animate);}
        },150);
        answered++;
        const progress=(answered/sortedQuiz.length)*100;
        progressBar.style.width=progress+'%';
        btn.parentElement.querySelectorAll('button').forEach(b=>b.disabled=true);
        if(answered===sortedQuiz.length){confetti({particleCount:200,spread:80,origin:{y:0.6}});alert('🎉 Quiz Completed! Well done! 🎉');}
      });
    });
  });
</script>
